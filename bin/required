#!/usr/bin/env node

var required = require('..');

var path = process.argv[2];

if (!path) {
    return console.error('Usage: required /path/to/module.js');
}

var ee = required(path);

ee.on('dep', function(dep) {
    console.log(dep);
});

ee.on('error', function(err) {
    console.error(err);
});

ee.on('end', function() {
    process.exit();
});

// vim ft=javascript
